@{
    ViewData["Title"] = "Home Page";
}

<div id="carousel" class="carousel slide" data-bs-ride="carousel">
  <ol class="carousel-indicators">
    <li data-bs-target="#carousel" data-bs-slide-to="0" class="active"></li>
    <li data-bs-target="#carousel" data-bs-slide-to="1"></li>
    <li data-bs-target="#carousel" data-bs-slide-to="2"></li>
    <li data-bs-target="#carousel" data-bs-slide-to="3"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/imagenes/sliders/slider-img-01.png" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="/imagenes/sliders/slider-img-02.png" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="/imagenes/sliders/slider-img-03.png" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="/imagenes/sliders/slider-img-04.png" class="d-block w-100" alt="...">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
  </button>
</div>

<div class="container">
    <div class="row">
        <div class="col-12 d-flex justify-content-center mt-3">
            <h2 class="titulo">Menú</h2>
        </div>
        <div class="col-12 d-flex justify-content-center">
            <div class="titulo-divisor"></div>
        </div>
    </div>
</div>